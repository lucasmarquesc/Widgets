<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base escuro -->
    <style name="Base.Theme.Widgets" parent="Theme.Material3.Dark.NoActionBar">

        <!-- Cor principal usada em AppBar, Botões, FAB -->
        <item name="colorPrimary">@color/green_300</item>
        <!-- Texto/ícones sobre a cor primária -->
        <item name="colorOnPrimary">@color/black</item>

        <!-- Cor secundária usada em Chips, Sliders, Switches -->
        <item name="colorSecondary">@color/green_200</item>
        <!-- Texto/ícones sobre a cor secundária -->
        <item name="colorOnSecondary">@color/black</item>

        <!-- Fundo principal das telas -->
        <item name="android:colorBackground">@color/black</item>
        <!-- Cor do texto padrão em cima do fundo -->
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Cor usada em superfícies (Cards, Dialogs, BottomSheet) -->
        <item name="colorSurface">@color/dark_gray</item>
        <!-- Texto/ícones sobre superfícies -->
        <item name="colorOnSurface">@color/white</item>

        <!-- Cor de erro em inputs/dialogs -->
        <item name="colorError">@color/red_error</item>
        <!-- Texto sobre áreas de erro -->
        <item name="colorOnError">@color/white</item>

        <!-- Status bar no tema escuro -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Ícones da status bar ficam claros (brancos) -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- Barra de navegação no tema escuro -->
        <item name="android:navigationBarColor">@color/black</item>

    </style>

    <style name="Theme.Widgets" parent="Base.Theme.Widgets" />
</resources>
