<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base claro -->
    <style name="Base.Theme.Widgets" parent="Theme.Material3.Light.NoActionBar">

        <!-- Cor principal usada em AppBar, Botões, FAB -->
        <item name="colorPrimary">@color/green_500</item>
        <!-- Cor do texto/ícone em cima da cor primária -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Cor secundária usada em Chips, Sliders, Switches -->
        <item name="colorSecondary">@color/green_300</item>
        <!-- Cor do texto/ícone sobre a cor secundária -->
        <item name="colorOnSecondary">@color/black</item>

        <!-- Fundo principal das telas -->
        <item name="android:colorBackground">@color/green_100</item>
        <!-- Cor do texto padrão em cima do fundo -->
        <item name="android:textColorPrimary">@color/black</item>

        <!-- Cor usada em superfícies (Cards, Dialogs, BottomSheet) -->
        <item name="colorSurface">@color/white</item>
        <!-- Texto/ícones sobre superfícies -->
        <item name="colorOnSurface">@color/black</item>

        <!-- Cor usada para destacar erros (TextInputLayout, AlertDialog) -->
        <item name="colorError">@color/red_error</item>
        <!-- Cor do texto sobre áreas de erro -->
        <item name="colorOnError">@color/white</item>

        <!-- Cor da status bar (barra superior do Android) -->
        <item name="android:statusBarColor">@color/green_500</item>
        <!-- Ícones da status bar ficam escuros (visíveis sobre fundo claro) -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Cor da barra de navegação (botões virtuais) -->
        <item name="android:navigationBarColor">@color/white</item>

    </style>

    <style name="Theme.Widgets" parent="Base.Theme.Widgets" />
</resources>
